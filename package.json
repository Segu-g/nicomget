{
  "name": "nicomget",
  "version": "2.2.1",
  "description": "Multi-platform live comment provider library",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./niconico": {
      "types": "./dist/providers/niconico/index.d.ts",
      "import": "./dist/providers/niconico/index.js",
      "require": "./dist/providers/niconico/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "verify": "tsx scripts/verify-connection.ts"
  },
  "keywords": [
    "niconico",
    "live",
    "comment",
    "stream"
  ],
  "author": "Segu_g <segusegment@gmail.com>",
  "contributors": [
    "Claude <noreply@anthropic.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "@n-air-app/nicolive-comment-protobuf": "github:Segu-g/nicolive-comment-protobuf#v2025.602.163750-segument",
    "protobufjs": "^7.4.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "tsup": "^8.5.1",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "vitest": "^3.0.0"
  }
}
